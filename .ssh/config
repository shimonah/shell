# create config file 
touch ~/.ssh/config

# add this lines

Host alias-name
        HostName 127.0.0.1
        User usr-name

Host another-alias-name
        HostName 127.0.0.2
        User another-usr-name
 
 Host alias-host-name
        AddKeysToAgent yes
        UseKeychain yes
        IdentityFile ~/.ssh/public_key


# use ssh alias
ssh alias-name
